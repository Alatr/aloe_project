{
  "name": "Aloe",
  "version": "0.0.1",
  "description": "this project presents a simplified analogue version of slask chat",
  "main": "src/init.jsx",
  "type": "module",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "server": "npm run server/index.js",
    "client": "npm run start --prefix client",
    "build": "cd client/ && npm i && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alatr/aloe_project.git"
  },
  "author": "Dmytro Lukianov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Alatr/aloe_project/issues"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css|less|sass)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/file-mock.js"
    }
  },
  "homepage": "https://github.com/Alatr/aloe_project#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "dotenv-webpack": "^7.0.3",
    "express": "^4.17.1",
    "express-validator": "^6.12.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.1.0",
    "mongoose": "^5.13.7",
    "nodemailer": "^6.6.3",
    "nodemon": "^2.0.12",
    "uuid": "^8.3.2"
  },
  "devDependencies": {},
  "heroku-run-build-script": true
}
